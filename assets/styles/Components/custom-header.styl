.custom-header {
	box-sizing border-box;
	position relative;
	overflow hidden;

	.customize-partial-edit-shortcut-custom_header {
		top: 64px;
	}

	&--has-image {
		height 100vh;
	}


	&__media {
		position fixed;
		top: 0;
		left 0;
		width 100%;
		height 100%;

		.wp-custom-header {
			width 100%;
			height 100%;
		}
		img {
			display block
			height: 100%;
			left: 0;
			-o-object-fit: cover;
			object-fit: cover;
			width: 100%;
		}
	}

	&__branding {
		width 100%

		gutter( padding-top, 2 );
		gutter( padding-bottom, 2 );
	}
	&__media + &__branding {
		position fixed
		bottom 0
	}

	&__title {
		font-size: 2em;
		font-weight bold;
		margin: 0;
		+medium-up() {
			font-size: 2.4em;
			margin-bottom: 0;
		}

		a {
			color: inherit;
			text-decoration: none
		}
	}

	&__description {
		margin-top: 0;
		margin-bottom: 0;
		font-size: 1em;

		+medium-up() {
			font-size: 1.2em;
		}
	}
}
