.custom-header {

	img {
		display block
	}
	background-size: cover;
	position relative

	&__branding {

		gutter( padding-top, 2 );
		gutter( padding-bottom, 2 );
	}
	&__media + &__branding {
		position absolute
		bottom 0
	}

	&__title {
		font-size: 2em;
		font-weight bold;
		margin: 0;
		+medium-up() {
			font-size: 2.4em;
			margin-bottom: 0;
		}

		a {
			color: inherit;
			text-decoration: none
		}
	}

	&__description {
		margin-top: 0;
		margin-bottom: 0;
		font-size: 1em;

		+medium-up() {
			font-size: 1.2em;

		}
	}
}
